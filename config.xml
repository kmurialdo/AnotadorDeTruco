<?xml version='1.0' encoding='utf-8'?>
<widget id="com.anotadordetruco.murialdo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ANotador de Truco</name>
    <description>
        Anotador de Truco con posibilidad de jugar a 24 o a 30 puntos
    </description>
    <author email="kmurialdo@gmail.com" href="https://www.linkedin.com/in/kmurialdo/">
       Kevin Murialdo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
